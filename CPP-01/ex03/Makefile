# =================== #
#	 VARIABLES	   #
# =================== #

NAME = unnecessaryViolence
COMPILE = c++
INCLUDES = -IHumanA -IHumanB -IWeapon
FLAGS = -Wall -Wextra -Werror -std=c++98 $(INCLUDES) -MMD
OBJ = $(addprefix obj/, $(SRC:.cpp=.o))
HEADER = $(OBJ:.o=.d)

# ================== #
#	  SOURCES	   #
# ================== #

SRC =	main.cpp \
		HumanA/HumanA.cpp \
		HumanB/HumanB.cpp \
		Weapon/Weapon.cpp \

# ================= #
#	 TARGETS	   #
# ================= #

all: $(NAME)

$(NAME): $(OBJ)
	@$(COMPILE) $(FLAGS) -o $@ $^
	@echo "âœ… Successfully compiled!"

obj/%.o: %.cpp
	@mkdir -p $(dir $@)
	@$(COMPILE) $(FLAGS) -c $< -o $@

-include $(HEADER)

clean:
	@rm -rf obj/
	@echo "ðŸ§¹ Successfully cleaned"

fclean: clean
	@rm -rf $(NAME)

re: fclean all

.PHONY: all clean fclean re